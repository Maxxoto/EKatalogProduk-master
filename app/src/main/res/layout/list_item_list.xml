<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/list_layout"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/txt_resultfoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                android:maxHeight="250px"
                android:maxWidth="250px"
                android:minHeight="250px"
                android:minWidth="250px"
                android:layout_below="@id/txt_resultmerk"
                />
            <TextView
                android:id="@+id/txt_resultmerk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[MERK PRODUK|]"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txt_resultkode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Kode Produk]"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/txt_resultmerk"/>

            <TextView
                android:id="@+id/txt_resultnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Nama Produk]"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/txt_resultkode"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@id/txt_resultfoto"/>

            <TextView
                android:id="@+id/txt_resultjenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Jenis Produk]"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/txt_resultnama"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@id/txt_resultfoto"/>

            <TextView
                android:id="@+id/txt_resultvariasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Variasi Produk]"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/txt_resultjenis"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@id/txt_resultfoto"/>




        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
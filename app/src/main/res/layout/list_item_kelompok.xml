<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/list_layout"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            >

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/txt_resultfoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="250px"
                android:maxWidth="250px"
                android:minHeight="250px"
                android:minWidth="250px"
                android:layout_below="@id/txt_resultkelompok"
                />
            <TextView
                android:id="@+id/txt_resultkelompok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[KELOMPOK PRODUK]"
                android:textSize="20sp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/lbl_deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentang Produk :"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/txt_resultkelompok"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@id/txt_resultfoto"/>

            <TextView
                android:id="@+id/txt_resultdeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Ini Adalah Isinya Deskripsi Produk yang agang panjang]"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/lbl_deskripsi"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@id/txt_resultfoto"/>







        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>